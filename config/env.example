# Local Development & Docker Compose Environment Variables
# Copy this file to .env and update values as needed

# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGODB_URI=mongodb://mongodb:27017/ai-dnd-game
MONGODB_URI_PROD=mongodb://mongodb:27017/ai-dnd-game-prod

# Redis Configuration
REDIS_HOST=redis                    # Docker service name
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_HOST_INTERNAL=redis

# Redis Cache Management
CLEAR_CACHE_ON_DEPLOY=false         # Set to true to clear cache on deployment
CACHE_CLEAR_PATTERNS=user-sessions:*,game-state:*,ai:response:*  # Cache patterns to clear
CACHE_CLEAR_ON_STARTUP=false        # Set to true to clear cache on application startup
CACHE_PRESERVE_PATTERNS=mechanics:*,templates:*  # Cache patterns to preserve during clearing

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_FLASH_LITE_MODEL=gemini-2.0-flash-lite
GEMINI_FLASH_MODEL=gemini-2.5-flash
GEMINI_PRO_MODEL=gemini-2.5-pro
MODEL_SELECTION_ENABLED=true
FLASH_LITE_QUALITY_THRESHOLD=0.6
FLASH_QUALITY_THRESHOLD=0.7
PRO_FALLBACK_ENABLED=true
THREE_MODEL_FALLBACK_ENABLED=true
FLASH_LITE_RESPONSE_TIME_THRESHOLD=3000
FLASH_RESPONSE_TIME_THRESHOLD=5000

# LLM Service Configuration
LLM_SERVICE_URL=http://mock-llm:5002
# LLM_SERVICE_URL=https://generativelanguage.googleapis.com

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=86400000

# AI Context Configuration
MAX_CONTEXT_LENGTH=8000
CONTEXT_COMPRESSION_THRESHOLD=6000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_APP_NAME=AI-Powered D&D Game
FRONTEND_PORT=3000

# Docker Compose Configuration
BACKEND_URL=http://backend:5001
MOCK_LLM_ENABLED=true
