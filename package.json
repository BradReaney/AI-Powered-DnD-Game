{
  "name": "ai-powered-dnd-game",
  "version": "1.0.0",
  "description": "AI-Powered D&D Game - Full Stack Application",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/BradReaney/AI-Powered-DnD-Game.git"
  },
  "homepage": "https://github.com/BradReaney/AI-Powered-DnD-Game#readme",
  "bugs": {
    "url": "https://github.com/BradReaney/AI-Powered-DnD-Game/issues"
  },
  "author": "Brad Reaney",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "format": "npm run format:backend && npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "format:check": "npm run format:check:backend && npm run format:check:frontend",
    "format:check:frontend": "cd frontend && npm run format:check",
    "format:check:backend": "cd backend && npm run format:check",
    "quality": "npm run quality:backend && npm run quality:frontend",
    "quality:frontend": "cd frontend && npm run quality",
    "quality:backend": "cd backend && npm run quality",
    "quality:fix": "npm run quality:fix:backend && npm run quality:fix:frontend",
    "quality:fix:frontend": "cd frontend && npm run quality:fix",
    "quality:fix:backend": "cd backend && npm run quality:fix",
    "quality:local": "./scripts/local-quality-check.sh",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf frontend/dist backend/dist frontend/node_modules backend/node_modules node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "if [ \"$CI\" != \"true\" ]; then husky install; fi"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "backend/**/*.{js,jsx,ts,tsx}": [
      "cd backend && eslint --fix",
      "cd backend && prettier --write"
    ],
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
